generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  role       String     @default("corretor")
  active     Boolean    @default(false)
  createdAt  DateTime   @default(now()) @map("created_at")
  leads      Lead[]     @relation("LeadOwner")
  properties Property[] @relation("PropertyAuthor")

  @@map("User")
}

model Property {
  id            Int      @id @default(autoincrement())
  title         String
  description   String?
  price         Decimal? @db.Decimal(12, 2)
  status        String   @default("draft")
  featured      Boolean  @default(false)
  location      String?  @default("Goiânia")
  developer     String?  @default("Lopes Imóveis")
  category      String?  @default("venda")
  bedrooms      Int?
  bathrooms     Int?
  area          Float?
  authorId      Int      @map("author_id")
  bannerImage   String?  @map("banner_image")
  galleryImages String[] @map("gallery_images")
  floorPlans    String[] @map("floor_plans")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @map("updated_at")
  leads         Lead[]
  author        User     @relation("PropertyAuthor", fields: [authorId], references: [id])

  @@map("Property")
}

model Lead {
  id         Int       @id @default(autoincrement())
  name       String
  phone      String
  email      String?
  propertyId Int?      @map("property_id")
  ownerId    Int?      @map("owner_id")
  status     String    @default("new")
  createdAt  DateTime  @default(now()) @map("created_at")
  owner      User?     @relation("LeadOwner", fields: [ownerId], references: [id])
  property   Property? @relation(fields: [propertyId], references: [id])

  @@map("Lead")
}
